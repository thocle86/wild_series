{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}

    <h1 class="m-3">
        Liste des catégories
    </h1>

    <a href="{{ path('category_new') }}" class="d-inline-block m-3">
        <button class="btn btn-outline-black m-1">
            Créer une catégorie&nbsp;&nbsp;<i class="bi bi-plus-circle"></i>
        </button>
    </a>

    <div class="table-responsive-md m-3">
        <table class="table table-hover align-middle">
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>
                        <h4 class="mx-5">
                            <i class="bi bi-arrow-right-circle"></i>&nbsp;&nbsp;{{ category.name }}
                        </h4>
                    </td>
                    <td class="col-1">
                        {{ include('category/_button_edit.html.twig') }}
                    </td>
                    <td class="col-1">
                        {{ include('category/_button_delete.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune catégorie trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
